<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity"
    android:background="#efefef">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="8dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/rps"/>

        <TextView
            style="@style/TitleStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rock. paper. scissors"
            app:fontFamily="@font/just_another_hand" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--column one-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/PlayerStyle"
                    android:id="@+id/PlayerA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player A" />

                <TextView
                    style="@style/ScoreStyle"
                    android:id="@+id/score_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/just_another_hand"
                    android:text="0"/>

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/PlayerA_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="addAPointA"
                    android:text="+1"
                    android:textSize="24sp" />

            </LinearLayout>
<!--column two-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    style="@style/PlayerStyle"
                    android:id="@+id/PlayerB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Player B"/>

                <TextView
                    style="@style/ScoreStyle"
                    android:id="@+id/score_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/just_another_hand"
                    android:text="0" />

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/PlayerB_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="+1"
                    android:textSize="24sp"
                    android:onClick="addAPointB"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center|bottom">

        <Button
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:id="@+id/Reset_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="reset game"
            android:textSize="30sp"
            android:gravity="center|bottom"
            android:onClick="reset"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>